@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="Admin" asp-action="AssignRole" asp-route-userId="@user.Id">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
