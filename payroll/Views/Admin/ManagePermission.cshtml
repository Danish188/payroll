<h2>Permissions</h2>

<form asp-controller="Admin" asp-action="CreatePermission" method="post">
    <input type="hidden" id="roleId" name="roleId" value="@ViewData["RoleId"]" />
    <div class="form-group">
        <label for="permissionName">Permission Name</label>
        <input type="text" id="permissionName" name="permissionName" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Permission</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Permission</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var permission in Model)
        {
            <tr>
                <td>@permission</td>
                <td>
                    <form asp-controller="Admin" asp-action="DeletePermission" method="post">
                        <input type="hidden" id="roleId" name="roleId" value="@ViewData["RoleId"]" />
                        <input type="hidden" name="permissionName" value="@permission" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>