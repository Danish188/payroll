@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Manage Roles</h2>

<form asp-action="CreateRole" method="post">
    <div class="form-group">
        <label for="roleName">Role Name</label>
        <input type="text" id="roleName" name="roleName" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Create Role</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form asp-controller="Admin" asp-action="ListPermissions" method="get">
                        <input type="hidden" name="roleId" value="@role.Id" />
                        <button type="submit" class="btn btn-primary">View Permissions</button>
                    </form>
                    <form asp-controller="Admin" asp-action="DeleteRole" method="post">
                        <input type="hidden" name="roleId" value="@role.Id" />
                        <button type="submit" class="btn btn-danger">Delete Role</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
